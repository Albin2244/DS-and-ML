import matplotlib.pyplot as plt
import numpy as np
years = np.array([2010, 2011, 2012, 2013, 2014, 2015, 2016])
car_values = np.array([50000, 48000, 45000, 40700, 37500, 33500, 28000])
plt.plot(years, car_values, linestyle='--', color='red', marker='o', linewidth=4, markersize=10, markerfacecolor='green')
plt.title("Value Depreciation")
plt.xlabel("Year")
plt.ylabel("Car Value ($)")
plt.grid(True)
plt.show()
